<!-- Products Section -->
<section class="products-section" aria-labelledby="products-title">
  <div class="container">
    <h2 id="products-title">Featured Products</h2>
    <div class="product-grid">
      {% for product in collections.frontpage.products limit:3 %}
        <article class="product-card">
          <a href="{{ product.url }}" aria-label="View details for {{ product.title }}">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" loading="lazy">
            <h3>{{ product.title }}</h3>
            <div class="product-rating">
              <div class="star-rating small">
                <span class="star filled">★</span>
                <span class="star filled">★</span>
                <span class="star filled">★</span>
                <span class="star filled">★</span>
                <span class="star filled">★</span>
              </div>
              <span class="rating-count">(24 reviews)</span>
            </div>
            <p class="product-description">
              {% if product.title contains 'Mountain' %}
                Perfect for off-road adventures with durable construction and advanced suspension
              {% elsif product.title contains 'Road' %}
                Built for speed and efficiency with lightweight frame and aerodynamic design
              {% else %}
                Essential gear for every cyclist with premium materials and comfort features
              {% endif %}
            </p>
            <span class="view-details">View Details</span>
          </a>
        </article>
      {% endfor %}
    </div>
    <div class="products-cta">
      <a href="/collections/all" class="btn btn-secondary">View All Products</a>
    </div>
  </div>
</section>

