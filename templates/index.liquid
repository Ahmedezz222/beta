<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <h1>Welcome to Bike Store</h1>
      <p class="hero-subtitle">Your One-Stop Shop for All Things Cycling</p>
      <div class="hero-buttons">
        <a href="/collections/all" class="btn btn-primary">Shop Now</a>
        <a href="/pages/cafe-menu" class="btn btn-secondary">Cafe Menu</a>
      </div>
    </div>
  </div>
</section>

<!-- About Section -->
<section class="about-section">
  <div class="container">
    <div class="about-content">
      <h2>About Bike Store</h2>
      <p>At Bike Store, we are passionate about cycling. Our mission is to provide top-quality bikes, gear, and accessories to cyclists of all levels.</p>
      
      <div class="features-grid">
        <div class="feature-item">
          <h3>Quality Bikes</h3>
          <p>Premium selection of mountain, road, and city bikes</p>
        </div>
        <div class="feature-item">
          <h3>Expert Service</h3>
          <p>Professional maintenance and repair services</p>
        </div>
        <div class="feature-item">
          <h3>Cafe & Community</h3>
          <p>Relax in our cafe while we service your bike</p>
        </div>
      </div>
      
      <div class="about-cta">
        <a href="/pages/contact" class="btn btn-primary">Contact Us</a>
      </div>
    </div>
  </div>
</section>

<!-- Products Section -->
<section class="products-section">
  <div class="container">
    <h2>Our Products</h2>
    <div class="product-grid">
      {% for product in collections.frontpage.products limit:3 %}
        <div class="product-card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
            <h3>{{ product.title }}</h3>
            <p class="product-description">
              {% if product.title contains 'Mountain' %}
                Perfect for off-road adventures
              {% elsif product.title contains 'Road' %}
                Built for speed and efficiency
              {% else %}
                Essential gear for every cyclist
              {% endif %}
            </p>
            <span class="view-details">View Details</span>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section">
  <div class="container">
    <h2>What Our Customers Say</h2>
    <div class="testimonials-grid">
      <div class="testimonial-item">
        <p>"Bike Store has the best collection of bikes and accessories. Excellent service and great prices!"</p>
        <span class="customer-name">- Alex J.</span>
      </div>
      <div class="testimonial-item">
        <p>"I love my new mountain bike from Bike Store. The quality and customer service are top-notch!"</p>
        <span class="customer-name">- Maria S.</span>
      </div>
      <div class="testimonial-item">
        <p>"Their bike repair service is fast and reliable. Highly recommend!"</p>
        <span class="customer-name">- James T.</span>
      </div>
    </div>
  </div>
</section>
