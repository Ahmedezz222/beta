<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ shop.name }} - Coming Soon</title>
  
  <!-- Preload critical assets -->
  <link rel="preload" href="{{ 'theme.css' | asset_url }}" as="style">
  <link rel="preload" href="{{ 'logo.png' | asset_url }}" as="image">
  
  <!-- Styles -->
  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="{{ 'logo.png' | asset_url }}">
  
  <!-- Meta tags -->
  <meta name="description" content="{{ shop.description | escape }}">
  <meta property="og:title" content="{{ shop.name }}">
  <meta property="og:description" content="{{ shop.description | escape }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ shop.url }}">
  <meta property="og:image" content="{{ 'logo.png' | asset_url }}">
  
  <!-- Shopify required -->
  {{ content_for_header }}
</head>

<body class="password-page">
  <div class="password-container">
    <header class="password-header">
      <div class="logo-container">
        <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" class="logo" width="120" height="60">
        <h1>{{ shop.name }}</h1>
      </div>
    </header>

    <main class="password-content">
      <div class="password-hero">
        <div class="hero-image">
          <img src="{{ 'bike_yard_m.jpg' | asset_url }}" alt="Bike Yard Store" loading="lazy" width="600" height="400">
        </div>
        
        <div class="hero-content">
          <h2>Coming Soon</h2>
          <p>We're working hard to bring you the best bike store experience. Our new website will be launching soon with a complete selection of bikes, accessories, and expert service.</p>
          
          <div class="countdown-section">
            <h3>Launch Date</h3>
            <div class="countdown-timer" id="countdown">
              <div class="countdown-item">
                <span class="countdown-number" id="days">00</span>
                <span class="countdown-label">Days</span>
              </div>
              <div class="countdown-item">
                <span class="countdown-number" id="hours">00</span>
                <span class="countdown-label">Hours</span>
              </div>
              <div class="countdown-item">
                <span class="countdown-number" id="minutes">00</span>
                <span class="countdown-label">Minutes</span>
              </div>
              <div class="countdown-item">
                <span class="countdown-number" id="seconds">00</span>
                <span class="countdown-label">Seconds</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="password-form-section">
        <div class="form-container">
          <h3>Store Access</h3>
          <p>Enter the password to access our store</p>
          
          {% form 'storefront_password' %}
            <div class="password-form">
              <div class="form-group">
                <label for="password" class="visually-hidden">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter password" required class="password-input">
              </div>
              
              <button type="submit" class="btn btn-primary">
                <span class="btn-text">Enter Store</span>
                {% render 'icon-symbol', icon_symbol: '‚Üí' %}
              </button>
            </div>
            
            {% if form.errors %}
              <div class="form-errors">
                <p>{{ form.errors | default_errors }}</p>
              </div>
            {% endif %}
          {% endform %}
        </div>
      </div>

      <div class="store-preview">
        <h3>What to Expect</h3>
        <div class="preview-grid">
          <div class="preview-item">
            {% render 'icon-text', icon_text: 'Bike' %}
            <h4>Quality Bikes</h4>
            <p>Premium selection of mountain, road, and city bikes from trusted brands</p>
          </div>
          
          <div class="preview-item">
            {% render 'icon-text', icon_text: 'Service' %}
            <h4>Expert Service</h4>
            <p>Professional maintenance and repair services by certified mechanics</p>
          </div>
          
          <div class="preview-item">
            {% render 'icon-symbol', icon_symbol: '‚òï' %}
            <h4>Cafe & Community</h4>
            <p>Relax in our cozy cafe while we service your bike</p>
          </div>
          
          <div class="preview-item">
            {% render 'icon-text', icon_text: 'Shop' %}
            <h4>Easy Shopping</h4>
            <p>Convenient online ordering with fast shipping and easy returns</p>
          </div>
        </div>
      </div>

      <div class="contact-section">
        <h3>Get in Touch</h3>
        <div class="contact-info">
          <div class="contact-item">
            {% render 'icon-text', icon_text: 'Call' %}
            <div class="contact-details">
              <h4>Phone</h4>
              <p><a href="tel:+1234567890">(123) 456-7890</a></p>
            </div>
          </div>
          
          <div class="contact-item">
            {% render 'icon-text', icon_text: 'Email' %}
            <div class="contact-details">
              <h4>Email</h4>
              <p><a href="mailto:info@bikeyard.com">info@bikeyard.com</a></p>
            </div>
          </div>
          
          <div class="contact-item">
            {% render 'icon-symbol', icon_symbol: 'üìç' %}
            <div class="contact-details">
              <h4>Address</h4>
              <p>123 Bike Street<br>Cycling City, CC 12345</p>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer class="password-footer">
      <div class="footer-content">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        
        <div class="social-links">
          <a href="#" class="social-link" aria-label="Facebook">{% render 'icon-symbol', icon_symbol: 'üìò' %}</a>
          <a href="#" class="social-link" aria-label="Instagram">{% render 'icon-symbol', icon_symbol: 'üì∑' %}</a>
          <a href="#" class="social-link" aria-label="Twitter">{% render 'icon-symbol', icon_symbol: 'üê¶' %}</a>
          <a href="#" class="social-link" aria-label="YouTube">{% render 'icon-symbol', icon_symbol: 'üì∫' %}</a>
        </div>
      </div>
    </footer>
  </div>

  <script>
    // Password page functionality
    document.addEventListener('DOMContentLoaded', function() {
      // Countdown timer
      const launchDate = new Date('2024-12-31T23:59:59').getTime();
      
      function updateCountdown() {
        const now = new Date().getTime();
        const distance = launchDate - now;
        
        if (distance > 0) {
          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);
          
          document.getElementById('days').textContent = days.toString().padStart(2, '0');
          document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
          document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
          document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
        } else {
          document.getElementById('countdown').innerHTML = '<div class="launched">üöÄ Store is now live!</div>';
        }
      }
      
      // Update countdown every second
      updateCountdown();
      setInterval(updateCountdown, 1000);
      
      // Password form enhancement
      const passwordForm = document.querySelector('.password-form');
      const passwordInput = document.getElementById('password');
      
      if (passwordForm && passwordInput) {
        passwordForm.addEventListener('submit', function(e) {
          if (!passwordInput.value.trim()) {
            e.preventDefault();
            passwordInput.focus();
          }
        });
        
        // Auto-focus password input
        setTimeout(() => {
          passwordInput.focus();
        }, 1000);
      }
      
      // Social links functionality
      const socialLinks = document.querySelectorAll('.social-link');
      socialLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          // Implement social media links
          console.log('Social link clicked:', this.getAttribute('aria-label'));
        });
      });
    });
  </script>
</body>
</html>
